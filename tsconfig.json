{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "lib": [
            "dom",
            "esnext"
        ],
        "noImplicitAny": true,
        "noResolve": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "rootDir": ".",
        "outDir": "dist/"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ],
    "types": [
        "babylonjs",
    ]
}